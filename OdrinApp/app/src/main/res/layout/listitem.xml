<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardBackgroundColor="#FDFDFD"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:id="@+id/cardView"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coffeeImage"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/igranita" />

            <TextView
                android:id="@+id/coffeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_toRightOf="@+id/coffeeImage"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Strawberry Granita" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coffeeName"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/coffeeImage"
                android:textSize="12sp"
                android:textColor="#666666"
                tools:text="" />

            <TextView
                android:id="@+id/clickheretoorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/coffeeImage"
                android:textColor="#666666"
                tools:text="Click  to  Order" />

        </LinearLayout>

</androidx.cardview.widget.CardView>
